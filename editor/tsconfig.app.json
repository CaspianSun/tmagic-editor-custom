{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["services/api.d.ts", "types/**/*.d.ts", "src/**/*", "src/**/*.vue", "src/**/*.tsx"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["element-plus/global", "@types/animejs/index"],
    "jsx": "preserve",
    "jsxImportSource": "vue"
  }
}
